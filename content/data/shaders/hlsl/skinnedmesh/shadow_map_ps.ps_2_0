#include "../ShadowMap/pcf1.hls"

struct INTERPOLANTS
{
    float4 position : POSITION;
    float Depth     : TEXCOORD0;
};

float4 main(INTERPOLANTS interpolants) : COLOR0
{
    // We write our depth as 24 bits and zero to the alpha channel to mark the edge of a shadow region.
    // This is later modified to get blured shadow edges (unless shadows overlap).
    return float4(packDepthToVec3(interpolants.Depth), 0.0f);
}
